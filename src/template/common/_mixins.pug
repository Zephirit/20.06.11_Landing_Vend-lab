mixin decision(cl)
	.decision(class=cl)
		span Профессиональные 
		span решения 
		span в области вендинга
mixin socials
	.social
		each contact in ['whatsapp','viber','telegram']
			a(href="#").social__link.hvr-grow
				img(src=`./templates/default/images/socials/${contact}.png`, alt=`${contact}`)
mixin contacts(cl)
	.contacts(class=cl)
		.contacts__phone.hvr-grow
			a(href="tel:84997034217").contacts__tophone 
				span 8 (499) 703-42-17
		.contacts__social
			+socials